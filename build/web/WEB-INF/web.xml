<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>servlets.Hello</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>StudentsTable</servlet-name>
        <servlet-class>servlets.StudentsTable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentCreateServlet</servlet-name>
        <servlet-class>servlets.StudentCreateServlet</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>servlets.UpdateStudent</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>servlets.DeleteStudent</servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/DeleteStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/UpdateStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentCreateServlet</servlet-name>
        <url-pattern>/StudentCreateServlet</url-pattern>
    </servlet-mapping>
      <servlet-mapping>
        <servlet-name>StudentsTable</servlet-name>
        <url-pattern>/StudentsTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
